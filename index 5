<body>
    <div class="container">
        <h2>üîê Penerapan Callback Function</h2>

        <div class="card">
            <label for="username">Masukkan Username:</label>
            <input type="text" id="username" placeholder="admin">
            <button onclick="mulaiProses()">Login</button>
        </div>

        <pre id="output"></pre>
    </div>

    <script>
        const output = document.getElementById("output");

        // PROSES 1: Verifikasi username
        function login(username, callback) {
            output.textContent += "Memeriksa identitas...\n";
            if (username === "admin") {
                output.textContent += "‚úÖ Login berhasil sebagai admin!\n";
                callback(true);
            } else {
                output.textContent += "‚ùå Login gagal! Username salah.\n";
                callback(false);
            }
        }

        // PROSES 2: Buat key jika login benar
        function generateKey(isValid, callback) {
            if (!isValid) {
                output.textContent += "üö´ Tidak bisa membuat key karena login gagal.\n";
                return;
            }
            const key = "KEY-" + Math.random().toString(36).substring(2, 8).toUpperCase();
            output.textContent += "üîë Key berhasil dibuat: " + key + "\n";
            callback(key);
        }

        // PROSES 3: Menampilkan laporan penghasilan
        function laporan(key) {
            output.textContent += "üìä Menampilkan laporan untuk key: " + key + "\n";
            const penghasilan = "Rp 12.500.000";
            output.textContent += "üí∞ Penghasilan Admin bulan ini: " + penghasilan + "\n";
        }

        // Jalankan proses callback berantai
        function mulaiProses() {
            output.textContent = ""; // reset tampilan
            const username = document.getElementById("username").value.trim();

            login(username, function (status) {
                generateKey(status, function (key) {
                    laporan(key);
                });
            });
        }
    </script>
</body>

