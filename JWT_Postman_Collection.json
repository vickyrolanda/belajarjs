          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            },
            "description": "Test akses endpoint protected tanpa token - should return 401"
          }
        },
        {
          "name": "Login with Invalid Credentials",
          "request": {
            "method": "POST",
